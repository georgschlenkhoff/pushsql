{
    "parser": "babel-eslint",
    "plugins": [
        "flowtype"
    ],
    "env": {
        "es6": true,
        "node": true,
	"mocha": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:flowtype/recommended"
    ],
    "parserOptions": {
        "sourceType": "module",
	"ecmaVersion": 8
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-console": "off",
        "valid-jsdoc":
        [
          "error", { "prefer":
            { "arg": "param", "argument": "param", "class": "constructor", "return": "returns" }
          }
        ]
    }
}
